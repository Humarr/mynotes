<MainScreen>
    name: "main_screen"
    MDFloatLayout:
        md_bg_color: bg_color
        MDBottomNavigation:
            id: bottom_nav
            text_color_active: btn_color
            use_text: False
            radius: 24, 24
            panel_color: bg_color
            # Add a NavigationItem for each Navigation.
            MDBottomNavigationItem:
                name: "screen 1"
                text: "Notes"
                icon: "notebook-outline"
                # badge_icon: "numeric-10"
                # Add Contents here


    theme_text_color: "Custom"
    text_color: btn_color
    divider: None
    ripple_scale: 0.2
    # pos_hint: {'center_x': 0.5,'center_y': 0.5}
    # on_press: root.show_file_name(root.name)
    on_press: root.read_pdf(root.name)

    # password: True

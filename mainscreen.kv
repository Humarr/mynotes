                    do_scroll_y: True
                    do_scroll_x: False
                    size_hint_y: .95
                    pos_hint: {'center_x': 0.5,'center_y':.35}
                    bar_width: 2

                    GridLayout:
                        # bg_color: btn_color
                        id: notes
                        cols: 1
                        height: self.minimum_height
                        row_default_height:'90dp'
                        size_hint_y: None
                        padding: '15dp','10dp'
                        spacing: '15dp','10dp'


            MDBottomNavigationItem:
                name: "screen 2"
                text: "Recordings"
                icon: "microphone"
                # Add Contents here
                MDLabel:
                    text: "Recordings"

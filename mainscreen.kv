                #         row_default_height:'90dp'
                #         size_hint_y: None
                #         padding: '15dp','10dp'
                #         spacing: '15dp','10dp'

                MDLabel:
                    text: "Coming soon"
                    theme_text_color: 'Custom'
                    text_color: btn_color
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    halign: 'center'
                    font_size: '26sp'
                    bold: True
                    font_style: 'Body1'

                        

            MDBottomNavigationItem:
                name: "screen 3"
                text: ""
                icon: "blank"
                disabled: True
                # Add Contents here

            MDBottomNavigationItem:
                name: "screen 4"
                text: "Reminder"
                icon: "bell"
                # Add Contents here
                MDLabel:
                    text: "Reminder"
                    theme_text_color: 'Custom'
                    text_color: btn_color
                    pos_hint: {'center_x': 0.12, 'center_y': 0.85}
                    halign: 'center'
                    font_size: '16sp'
                    bold: True
                    font_style: 'Body1'



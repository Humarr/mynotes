                            IconLeftWidget:
                                icon: 'cloud-question'
                                theme_text_color: "Custom"
                                md_bg_color:btn_color
                                text_color: gch("ffffff")

                        OneLineIconListItem:
                            text: 'About developer'
                            theme_text_color: "Custom"
                            text_color: gch("#ffffff")
                            divider: None
                            on_press: root.about()
                            IconLeftWidget:
                                icon: 'information'
                                theme_text_color: "Custom"
                                md_bg_color:btn_color
                                text_color: gch("ffffff")

                        Widget:
                        Widget:
                        MDFillRoundFlatButton:
                            text: '[color=#b90000]Logout[/color]'
                            markup: True
                            md_bg_color: bg_color
                            size_hint_x:1
                            font_name: 'Roboto-Bold'
                            font_size:"20sp"

                            on_press: root.manager.current = "login"


        
        
        








                MDLabel:
                    text: "Coming soon"
                    theme_text_color: 'Custom'
                    text_color: btn_color
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    halign: 'center'
                    font_size: '26sp'
                    bold: True
                    font_style: 'Body1'
                        

            MDBottomNavigationItem:
                name: "delete_screen"
                text: "deleted"
                icon: "trash-can"
                # Add Contents here
                MDLabel:
                    text: "Deleted Notes"
                    theme_text_color: 'Custom'
                    text_color: btn_color
                    pos_hint: {'center_x': 0.13, 'center_y': 0.85}
                    halign: 'center'
                    font_size: '16sp'
                    bold: True
                    font_style: 'Body1'

                ScrollView:
                    do_scroll_y: True
                    do_scroll_x: False
                    size_hint_y: .95
                    pos_hint: {'center_x': 0.5,'center_y':.35}
                    bar_width: 2

                    GridLayout:
                        # bg_color: btn_color
                        id: deleted_notes
                        cols: 1
                        height: self.minimum_height
                        row_default_height:'90dp'
                        size_hint_y: None
                        padding: '15dp','10dp'
                        spacing: '15dp','10dp'



        MDFloatingActionButton:
            icon: "plus"
            pos_hint: {'center_x': 0.5}
            y: "24dp"
            md_bg_color: btn_color
            theme_text_color: "Custom"
            text_color: bg_color
            on_press: root.manager.current = "add_notes"

        MDCheckbox:
            id: check
            size_hint: None, None
            size: dp(0.1), dp(0.1)
            # pos_hint: {'center_x': .001, 'center_y': .4}
            active: False
















    MDNavigationLayout:
        ScreenManager:
            Screen:
                name: "nav_screen"
                MDBoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        id: toolbar
                        title: "Hi, Umar"
                        md_bg_color: btn_color
                        anchor_title: "center"
                        font_size: "30sp"
                        font_name: "Roboto-Bold"
                        # specific_text_color: text_color
                        specific_text_color: gch("ffffff")
                        left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                        elevation: 20
                    Widget:

        # Navigation Drawer Panel
        MDNavigationDrawer:
            # Add Navigation Drawer Panel Content here.
            id: nav_drawer
            # radius: (0, 16, 16, 0) if self.anchor == "left" else (16, 0, 0, 16)
            md_bg_color: btn_color
            # MDFloatLayout:
            MDBoxLayout:
                orientation:"vertical"
                spacing: '10dp'
                padding: '8dp'

                MDLabel:
                    text: 'My Notes'
                    shorten_text: True
                    markup: True
                    # font_style: "Subtitle1"
                    color: gch("ffffff")
                    size_hint_y: None
                    font_size: '30sp'
                    font_name: "Roboto-Bold.ttf"
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        theme_text_color: "Custom"
                        text_color: gch("#ffffff")
                        divider: None
                        OneLineIconListItem:
                            text: 'Profile'
                            theme_text_color: "Custom"
                            text_color: gch("#ffffff")
                            divider: None
                            on_press: root.profile()
                            IconLeftWidget:
                                icon: 'account'
                                theme_text_color: "Custom"
                                md_bg_color:btn_color
                                text_color: gch("ffffff")

                        OneLineIconListItem:
                            text: 'Upload Pdf File' if check.active == False else 'Uploading file...'
                            theme_text_color: "Custom"
                            text_color: gch("#ffffff")
                            divider: None
                            on_press: root.check()
                            IconLeftWidget:
                                icon: 'upload'
                                theme_text_color: "Custom"
                                md_bg_color:btn_color
                                text_color: gch("ffffff")


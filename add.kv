#: import gch kivy.utils.get_color_from_hex

#: set btn_color gch("b90000")
#: set text_color gch("000000")
#: set bg_color gch("ffffff")


<NotesCard>
    id: notes
    elevation:10
    md_bg_color: bg_color
    radius: [15,]
    size_hint_y: .42
    duration_long_touch: 0.1
    text: root.title
    theme_text_color: "Custom"
    text_color: btn_color
    secondary_theme_text_color: "Custom"
    secondary_text: root.body
    secondary_text_color: btn_color
    divider: None
    ripple_scale: 0.2
    on_press: root.show_notes_content(root.title, root.body)
    # password: True
    # on_press: root.manager.current = "profile"
    IconLeftWidget:
        icon: 'delete'
        theme_text_color: "Custom"
        md_bg_color:bg_color
        text_color: btn_color
        on_press: root.note_del(root.title, root.body)
            # root.ask_before_delete()
    MDIconButton:
        icon: 'share'
        theme_text_color: "Custom"
        md_bg_color:bg_color
        text_color: btn_color
        pos_hint: {'center_x': 0.85,'center_y': 0.5}
        on_press: root.share(root.title, root.body)
        user_font_size: '20sp'
    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {'center_x': 0.02,'center_y': 0.5}
        md_bg_color: btn_color

<DeletedNotesCard>
    id: notes
    elevation:10
    md_bg_color: bg_color
    radius: [15,]
    size_hint_y: .42
    duration_long_touch: 0.1
    text: root.title
    theme_text_color: "Custom"
    text_color: btn_color
    secondary_theme_text_color: "Custom"
    secondary_text: root.body
    secondary_text_color: btn_color
    divider: None
    ripple_scale: 0.2
    on_press: root.show_notes_content(root.title, root.body)
    # password: True
    # on_press: root.manager.current = "profile"
    IconLeftWidget:
        icon: 'delete'
        theme_text_color: "Custom"
        md_bg_color:bg_color
        text_color: btn_color
        on_press: root.note_del_permanent(root.title, root.body)

    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {'center_x': 0.02,'center_y': 0.5}
        md_bg_color: btn_color






<AddNotes>
    MDFloatLayout:
        Image:
            source: "note.png"
            allow_stretch: True
            size_hint_x: .81
            pos_hint: {'center_x': 0.5,'center_y': 0.81}
            halign: "center"
        MDIconButton:
            icon: "chevron-left"
            theme_text_color: "Custom"
            text_color: text_color
            font_size:"40sp"
            # font_name: 'Roboto-Bold'
            pos_hint: {'top': 0.99}
            on_press: root.manager.current = "main_screen"
            # halign: "center"
        MDFloatLayout:
            md_bg_color: btn_color
            size_hint_y: .6
            radius: [30, 0, 0, 0]

            MDTextField:
                id: title
                hint_text: "Title"
                current_hint_text_color: bg_color
                current_hint_text_font_size: "30sp"
                line_color_focus: bg_color
                line_color_normal: bg_color
                mode: "rectangle"
                size_hint_x: .84
                pos_hint: {'center_x': 0.5,'center_y': 0.79}

            MDTextField:
                id: body
                hint_text: "Start Typing..."
                current_hint_text_color: bg_color
                current_hint_text_font_size: "30sp"
                line_color_focus: bg_color
                line_color_normal: bg_color
                size_hint_x: .84
                size_hint_y: .5
                max_height: "120sp"
                do_wrap: True
                mode: "rectangle"
                multiline: True
                pos_hint: {'center_x': 0.5,'center_y': 0.45}

            MDCheckbox:
                id: check
                size_hint: None, None
                size: dp(1), dp(1)
                # pos_hint: {'center_x': .001, 'center_y': .4}
                active: False

            MDFillRoundFlatButton:
                text: '[color=#b90000]Save[/color]' if check.active == False else "[color=#b90000]Saving...[/color]"
                markup: True
                pos_hint: {'center_x': 0.5,'center_y': 0.18}
                md_bg_color: bg_color
                size_hint_x: .99
                font_size: "20sp"
                font_name: "Roboto-Bold"
                on_press: root.check()
            MDFlatButton:
                text: '[color=#ffffff]record voice?[/color]'
                markup: True
                pos_hint: {'center_x': 0.5,'center_y': 0.07}
                # md_bg_color: bg_color
                size_hint_x: .99
                font_size: "13sp"
                font_name: "Roboto-Bold"
                on_press:
                    # root.manager.current = "add_recording"
                    root.go_to_recording()
